{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File (Integrated Terminal)",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "pytest: All Tests",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--vscode-launch", // Custom flag to indicate that we are launching from VSCode
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "pytest: Current Module",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--vscode-launch", // Custom flag to indicate that we are launching from VSCode
        "--log-cli-level=INFO",
        "${file}"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "pytest: Focus Test",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--vscode-launch", // Custom flag to indicate that we are launching from VSCode
        // "--log-cli-level=INFO",
        // "-k",
        // "tests/test_osutils"
        // "tests/test_osutils/test_shell.py"
        "tests/test_commands.py"
        // "tests/test_datastores"
      ],
      "console": "integratedTerminal",
    }
  ]
}